<%= form_for :user, url:login_path do |f| %>
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |error| %>
			<div class="alert alert-danger"><%=error %> </div>
		<% end %>
	<% end %>
	<p>
		<%= f.label :email %> <br>
		<%= f.text_field :email, :class => 'form-control col-md-2' %> <br>
	</p>

	<p>
		<%= f.label :password %> <br>
		<%= f.text_field :password, :class => 'form-control col-md-2'%>
	</p>
	<p>
		<%= f.submit "Login", :class => "btn btn-primary"%>
	</p>
<% end %>