<div class="col-md-7"></div>
<div class="col-md-5">
	<% if !@ballot.all_expiration_requirements_met? && @ballot.has_support? %>
		<%= form_for :vote, url: ballot_votes_path(@ballot) do |f| %>
			<% @radio.each do |option| %>
				<%= radio_button_tag(:cast_vote, "#{option.strip}") %>
				<%= label_tag(:option, "#{option.strip}") %>
	<% end %>
	<%= f.submit "Cast Vote"%>
<% end %>
	<% elsif !@ballot.all_expiration_requirements_met? && !@ballot.has_support? %>
		<%= link_to "Support this ballot?!?!?", support_path(:ballot_id => "#{@ballot.id}"), :method => :post %>
	<% else %>
		<p> Ballot Closed </p>
<%end %>
</div>