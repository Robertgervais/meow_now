<div class="container">
	<div class="row">
		<h1 class="col-md-5"><%= "#{@ballot.ballot_issue}" %></h1>
		<div class="col-md-7"></div>
	</div>
	<div class="row">
		<% if @ballot.user %>
			<h2 class="col-md-5">Proposed by: <%= "#{@ballot.user.username}"%></h2>
		<% else %>
			<h2 class="col-md-5">Proposed by: User Deleted</h2>
		<% end %>
		<h2 class="col-md-5">Transparency: <%="#{@ballot.ballot_type}"%></h2>
		<div class="col-md-5"></div>
	</div>
	<div class="row">
		<p class="col-md-12"><%="#{@ballot.support}"%></p>
	</div>
	<div class="row">
		<p class="col-md-5"><%= @ballot.content.gsub(/\n/, '<br />').html_safe %></p>
		<div class="col-md-7"></div>
	</div>
	<div class="row">
		<%= render partial: "support_or_vote" %>
	</div>
	<div class="row">
		<div class="col-md-2">Vote Results:</div>
		<div class="col-md-10">
			<ul>
			<% @results.each do |key, value| %>
				<li><%= "#{key}: #{value}" %></li>
			<% end %>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2">Breakdown:</div>
		<div class="col-md-10">
			<% if @ballot.ballot_type == "Private" %>
				<%= render partial: "private", object: @ballot %>
			<% elsif @ballot.ballot_type == "Public" %>
				<%= render partial: "public", object: @ballot %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2">Delete</div>
		<div class="col-md-2">Send Reminder</div>
		<div class="col-md-2">Close</div>
		<div class="col-md-6"></div>
	</div>
</div>