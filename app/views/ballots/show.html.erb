<div class="container">
	<h1><%= "#{@ballot.ballot_issue}" %></h1>
	<h2>Proposed by: <%= "#{@ballot.user.username}" %></h2>
	<p><%= @ballot.content %></p>
</div>

<div class="container">
	<% if !@ballot.all_expiration_requirements_met? %>
		<%= form_for :vote, url: ballot_votes_path(@ballot) do |f| %>
			<% @radio.each do |option| %>
				<%= radio_button_tag(:cast_vote, "#{option.strip}") %>
				<%= label_tag(:option, "#{option.strip}") %>
			<% end %>
			<%= f.submit "Cast Vote"%>
		<% end %>
	<% else %>
		<p> Ballot Closed </p>
	<%end %>
</div>

<ul>
<% @results.each do |key, value| %>
	<li><%= "#{key}: #{value}" %>
<% end %>
</ul>

<% if @ballot.ballot_type == "Private" %>
	<%= render partial: "private", object: @ballot %>
<% elsif @ballot.ballot_type == "Public" %>
	<%= render partial: "public", object: @ballot %>
<% end %>